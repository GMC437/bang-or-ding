<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/studio">

    <Button
            android:layout_width="@dimen/one_hundred_fifty_dp"
            android:layout_height="@dimen/seventy_five_dp"
            android:id="@+id/bang"
            android:background="@color/monza"
            android:text="@string/bang"
            android:textSize="@dimen/forty_sp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/one_hundred_dp"/>

    <Button
            android:layout_width="@dimen/one_hundred_fifty_dp"
            android:layout_height="@dimen/seventy_five_dp"
            android:id="@+id/ding"
            android:background="@color/curious_blue"
            android:text="@string/ding"
            android:textSize="@dimen/forty_sp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fifty_dp"/>

</LinearLayout>